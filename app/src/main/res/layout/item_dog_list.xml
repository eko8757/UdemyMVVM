<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="dog"
            type="com.masshookpakeko.dogs.model.ResponseDog" />

        <variable
            name="listener"
            type="com.masshookpakeko.dogs.view.ClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:onClick="@{listener::onClicked}"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dogId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="@{String.valueOf(dog.uuid)}"/>

        <ImageView
            android:id="@+id/img_list_dog"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:imageUrl="@{dog.url}"
            android:padding="4dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/tv_name_list_dog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{dog.name}"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_lifespan_dog_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{dog.lifeSpan}" />
        </LinearLayout>
    </LinearLayout>
</layout>